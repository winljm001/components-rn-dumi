{
  "private": true,
  "name": "hj-components-rn",
  "version": "0.2.1",
  "description": "react native",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "start": "dumi dev",
    "docs:build": "dumi build",
    "docs:deploy": "gh-pages -d docs-dist",
    "build": "father-build",
    "deploy": "npm run docs:build && npm run docs:deploy",
    "release": "dotenv release-it",
    "prettier": "prettier --write \"**/*.{js,jsx,tsx,ts,less,md,json}\"",
    "test": "umi-test",
    "test:coverage": "umi-test --coverage"
  },
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "typings": "dist/index.d.ts",
  "repository": "git@github.com:hjfruit/hj-components-rn.git",
  "author": "winljm001 <819648983@qq.com> (https://github.com/winljm001)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hjfruit/hj-components-rn/issues"
  },
  "homepage": "https://github.com/hjfruit/hj-components-rn#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  
  "dependencies": {
    "dotenv-cli": "^4.0.0"
  },
  "devDependencies": {
    "@umijs/test": "^3.0.5",
    "dumi": "^1.0.10",
    "father-build": "^1.17.2",
    "gh-pages": "^3.0.0",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "yorkie": "^2.0.0",
    "@types/react": "^16.9.19",
    "@types/react-native": "0.62.13",
    "react": "16.13.1",
    "react-native": "0.63.4",
    "release-it": "^14.2.2",
    "@release-it/conventional-changelog": "^2.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "commitlint": "^11.0.0",
    "husky": "^4.2.5"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged && npm run build"
    }
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  }
}
